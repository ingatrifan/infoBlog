<% include ../partials/header %>

<div class="container">
        <h1 class="center">Edit <%=blog.title%></h1>
        <form class="special" action="/blogs/<%=blog._id%>?_method=PUT" method="POST" enctype="multipart/form-data">
            <div class="form-group">
                <input type="text" class="form-control" name="title" value="<%=blog.title%>">
            </div>
            <div class="form-group">
                <input type="file" id="image" name="image" accept="image/*">
            </div>
            <div class="form-group">
                <textarea rows="10" class="form-control" name ="body"><%=blog.body%></textarea>
            </div>
            <input type="submit" value="Edit" class="btn btn-primary btn-block">
        </form>
    </div>
<% include ../partials/footer %>
