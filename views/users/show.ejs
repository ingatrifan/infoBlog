<% include ../partials/header %>
<div class="jumbotron">
        <div class="row">
            <div class="col-sm-3 col-md-3 col-xl-2">
                <img src="<%=user.avatar%>" alt="" class="img-fluid img-responsive profile">
                <p>
                    <%if (currentUser && user._id.equals(currentUser._id)){%>
                        <a href="/users/<%=user._id%>/edit" class="edit">Edit profile <i class="fas fa-user-edit"></i></a>
                    <%}%>
                </p>
            </div>
            <div class="col-sm-9 col-md-9 col-xl-10">
                    <h1 class = ""><b><%=user.name%> <%=user.lname%></b></h1>
                    <h3 class=""><em>(<%=user.username%>)</em></h3>
                    <p>
                        <%if (user.facebook.length>1){%>
                            <a href="<%=user.facebook%>" target="_blank"><i class="fab fa-facebook"></i></a>
                        <%}%>
                        <%if (user.instagram.length>1){%>
                            <a href="<%=user.instagram %>" target="_blank"><i class="fab fa-instagram"></i></a>
                        <%}%>
                        <%if (user.tumblr.length>1){%>
                            <a href="<%=user.tumblr%>" target="_blank"><i class="fab fa-tumblr-square"></i></a>
                        <%}%>
                    </p>
                    <p>
                        <%=user.description%>
                    </p>
            </div>
        </div>
</div>
<div id=camp class="container">
    <div class="row">
        <div class="col-md-9">
            <div class="mt-3">
                <h1 style="display:inline">Blogs(<%=blogs.length%>)</h1>
                <%if (currentUser && user._id.equals(currentUser._id)){%>
                    <a href="/blogs/new" class="btn btn-primary float-right">Add new post!</a>  
                <%}%>
            </div>
            <div class="row" style="display:flex;flex-wrap:wrap">
                    <% blogs.forEach(function(blog){ %>
                        <div class="card mt-4 mb-4 cardShow">
                            <div class="card-body">
                                <h3 class="card-title"><%=blog.title%></h3>
                                <div class="row">
                                    <div class ="col-md-2 col-sm-6">
                                        <img src="<%=blog.image%>" class="img-thumbnail">
                                    </div>
                                    <div class="col-sm-6 col-md=9">
                                        <p><%=blog.body.substring(0,100)%>...</p>
                                        <a href="/blogs/<%=blog._id%>" class="btn  btn-primary">Read more</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% }) %>
            </div>
        </div>
    </div>
</div>

<% include ../partials/footer %>